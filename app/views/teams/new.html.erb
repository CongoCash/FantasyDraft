<div class="container">
  <div class="row">
    <div class="col s6 offset-s3">
      <h1>Create a team</h1>
    </div>
  </div>
  <div class="row">
    <div class="col s6 offset-s3">
      <%= form_for [@league, @team] do |f| %>
        <div>
          <%= f.text_field :name, placeholder: "Team Name" %>
          <%= link_to "Cancel", league_path(@league.id), class: 'btn red' %>
          <%= f.submit "Add Team", class:'btn green' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
