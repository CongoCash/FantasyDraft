<div class="container">
  <div class="row">
    <div class="col s6 offset-s3 center-align">
      <%= link_to 'Create League', new_league_path, class: 'btn btn-primary btn-large blue' %>

      <h1><%= @user.name + "'s leagues" %></h1>
      <hr>
      <% @user.leagues.each do |league| %>
        <h5><%= link_to league.name, league %></h5>
      <% end %>
    </div>
  </div>
</div>
